{
  "installation": {
    "version": "20.7.2",
    "plugins": {
      "@nxlv/python": "20.12.4"
    }
  },
  "plugins": [
    {
      "plugin": "@nxlv/python",
      "options": {
        "packageManager": "uv"
      }
    }
  ],
  "release": {
    "projects": [
      "*"
    ]
  },
  "generators": {
    "@nxlv/python:uv-project": {
      "projectType": "library",
      "pyprojectPythonDependency": ">=3.9,<3.12",
      "pyenvPythonVersion": "3.10.12",
      "publishable": true,
      "buildBundleLocalDependencies": false,
      "buildLockedVersions": false,
      "linter": "ruff",
      "unitTestRunner": "pytest",
      "codeCoverage": true
    }
  },
  "targetDefaults": {
    "test": {
      "dependsOn": ["^sync"]
    }
  }
}